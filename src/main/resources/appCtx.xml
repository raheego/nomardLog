<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- appCtx.xml -->
	<bean class="ex03.aop.ICalcImpl" id="c"/>
	<bean class="ex03.aop.LogPrintHandlerImpl" id="logPrintHandlerImpl"/>
	
	<bean class="org.springframework.app.framework.ProxyFactoryBean" id="proxy">
		<property name="proxyInterfaces" >
			<list>
				<value>ex03.aop.ICalc</value> <!-- 인터페이스 넣기 -->
			</list>
		</property>
		
		<property name="target" ref="c"/>

		<property name="interceptorNames">
			<list>
				<value>logPrintHandlerImpl</value> <!-- 보조업무 : handler -->
			</list>
		</property>		
	</bean>
</beans>
